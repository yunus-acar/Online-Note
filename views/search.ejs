<%- include('partials/header.ejs') -%>
<div class="w-screen flex items-start  justify-center mt-12">
    <div class="flex flex-col items-center ">
        <% if(!notes.length && flag){%>
        <div class="flex items-center justify-around bg-white leading-none  rounded-full p-2 shadow text-white text-sm">
            <span class="flex bg-red-600 text-white rounded-full h-6 px-2 justify-center items-center font-bold">
                Not bulunamadı
            </span>
        </div>
        <%}%>

    <form action="/note" method="GET" class="flex justify-center  py-12 w-full max-w-sm space-x-3 mt-16">
        <div class=" relative ">
            <input name="noteTitle" type="search" class=" rounded-lg border-transparent flex-1 appearance-none border border-gray-300 w-96 py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent" placeholder="Notunuzu Arayın"/>
            </div>
            <button class="flex-shrink-0 px-4 py-2 text-base font-semibold text-white bg-purple-600 rounded-lg shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 focus:ring-offset-purple-200" type="submit">
                Search
            </button>
        </form>
    </div>
</div>
<% if(notes.length) { %>
        <%- include('partials/card.ejs') -%>
<% } %>