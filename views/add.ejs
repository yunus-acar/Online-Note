<%- include('partials/header.ejs') -%>


<section>
    <form action="/add" method="POST" enctype="multipart/form-data"
        class="container  mx-auto ">

        <div class="space-y-6 mt-12">
            <div class="items-center w-full p-4 space-y-4 text-default-purple md:inline-flex md:space-y-0">

                <label class="max-w-sm mx-auto md:w-1/3 " for="title"><b>Başlık</b></label>

                <div class="max-w-sm mx-auto md:w-2/3">
                    <div class=" relative ">
                        <input name="title"
                            class=" rounded-lg border-transparent flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                            placeholder="Başlık" required />
                    </div>
                </div>
            </div>
            <hr />
            <div class="items-center w-full p-4 space-y-4 text-default-purple md:inline-flex md:space-y-0">

                <label class="max-w-sm mx-auto md:w-1/3" for="tags"><b>Etiket</b></label>

                <div class="max-w-sm mx-auto space-y-5 md:w-2/3">
                    <div>
                        <div class=" relative ">
                            <input type="text" name="tags"
                                class=" rounded-lg border-transparent flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                                placeholder="Etiket" />
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="items-center w-full p-4 space-y-4 text-default-purple md:inline-flex md:space-y-0">

                <label class="max-w-sm mx-auto md:w-1/3" for="img-button"><b>Resim</b></label>
                <div class="max-w-sm mx-auto space-y-5 md:w-2/3">
                    <div>
                        <div class=" relative ">
                            <input name="images" name="img" type="file" multiple />
                        </div>
                    </div>
                </div>
            </div>

            <hr />
            <div class="items-center w-full p-4 space-y-4 text-default-purple md:inline-flex md:space-y-0">

                <label class="max-w-sm mx-auto md:w-1/3" for="note"><b>Not</b></label>

                <div class="max-w-sm mx-auto space-y-5 md:w-2/3">
                    <div>
                        <div class=" relative h-96">
                            <textarea id="editor1" name="note"
                                class="h-96  resize-none">
                            </textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="w-full px-4 pb-4 ml-auto text-default-purple md:w-1/3">
                <input name="author" type="text" value="<%= currentUser.name %>" hidden="hidden">
                <button type="submit"
                    class="py-2 px-4  bg-default-purple hover:bg-purple-700 focus:ring-purple-500 focus:ring-offset-purple-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2  rounded-lg ">
                    Kaydet
                </button>


            </div>
        </div>
    </form>
</section>
<%- include('partials/footer.ejs') -%>