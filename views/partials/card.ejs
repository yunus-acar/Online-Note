<div class="container my-12 mx-auto px-4 md:px-12 ">
    <div class="flex flex-wrap">
        <% notes.forEach((note)=>{ %>
        <div class="my-1 w-full md:w-1/2 lg:my-4 lg:w-1/3 ">
            <div class="overflow-hidden shadow-white rounded-lg h-90 w-60 md:w-80 cursor-pointer mx-2">
                <a href="#" class="w-full block h-full">
                    <% for(let url of note.imgUrl ){%>
                    <img alt="blog photo" src="<%= url %>" class="max-h-40 w-full object-cover" />
                    <% } %>
                    <div class="bg-white dark:bg-gray-800 w-full p-4">
                        <p class="text-indigo-500 text-md font-medium">
                            Ekleyen: <%= note.author%>
                        </p>
                        <p class="text-gray-800 dark:text-white text-xl font-medium mb-2">
                            <%=note.title %>
                        </p>
                        <div class="text-gray-400 dark:text-gray-300 font-light flex-wrap text-md">
                            <%-note.note %>
                        </div>
                        <div class="flex flex-wrap justify-starts items-center mt-4">
                            <% for(let tag of note.tags){%>
                            <div class="text-xs mr-2 py-1.5 px-4 text-gray-600 bg-blue-100 rounded-2xl">
                                <%= tag %>
                            </div>
                            <% } %>
                        </div>
                        <div class="m-2">
                            <ul class="flex items-center justify-center ">
                                <li class="px-1">
                                    <a href="/edit/<%= note.id %>"
                                        class="flex items-center w-24 px-4 py-2 justify-center text-xs transition ease-in duration-200 uppercase rounded-full hover:bg-default-purple hover:text-white border-2 border-default-purple focus:outline-none">
                                        <i class="far fa-edit px-1"></i>Düzenle
                                    </a>
                                </li>
                                <li class="px-1">
                                    <form action="/delete/<%= note.id %>?_method=DELETE" method="POST">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit"
                                            class="flex items-center w-24 px-4 py-2 justify-center text-xs transition ease-in duration-200 uppercase rounded-full hover:bg-default-purple hover:text-white border-2 border-default-purple focus:outline-none">
                                            <i class="far fa-trash-alt px-1"></i>Sil
                                        </button>
                                    </form>
                                </li>
                                <li class="px-1 ">
                                    <a href="/noteView/<%= note.id %>"
                                        class="flex items-center w-24 px-4 py-2 justify-center text-xs transition ease-in duration-200 uppercase rounded-full hover:bg-default-purple hover:text-white border-2 border-default-purple focus:outline-none">
                                        <i class="fas fa-binoculars px-1"></i>Gör
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

            </div>
        </div>
        <% }); %>
    </div>
</div>