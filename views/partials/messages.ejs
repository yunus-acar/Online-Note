<% if(success_msg && success_msg != '') 
{ %>
<div class="inline-flex items-center justify-center bg-white leading-none  rounded-full p-2 shadow text-teal text-sm">
    <span class="inline-flex bg-green-600 text-white rounded-full h-6 px-2 justify-center items-center font-bold">
        <%= success_msg %>
    </span>

</div>

<% }
else if(error_msg && error_msg!= '')
{ %>
    <div class="inline-flex items-center justify-center bg-white leading-none  rounded-full p-2 shadow text-teal text-sm">
        <span class="inline-flex bg-blue-600 text-white rounded-full h-6 px-2 justify-center items-center font-bold">
            <%= error_msg %>
        </span>
    </div>

<% } %>

<% if(error && error!= '')
{ %>
<%= error_msg %>
<div class="inline-flex items-center justify-center bg-white leading-none  rounded-full p-2 shadow text-teal text-sm">
    <span class="inline-flex bg-red-600 text-white rounded-full h-6 px-2 justify-center items-center font-bold">
        <%= error %>
    </span>
</div>

<% } %>